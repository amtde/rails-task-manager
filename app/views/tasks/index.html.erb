<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.details %></p>
  <p><%= link_to 'edit', edit_task_path(task) %></p>
  <p><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

<% end %>

<%= link_to 'new', new_task_path%>


